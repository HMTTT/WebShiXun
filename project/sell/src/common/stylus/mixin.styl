body, html
	line-height: 1
	font-weight: 200
	font-family: 'PingFang SC', 'STHeitiSC-Light', arial

border-1px($color)
	position: relative
	&:after
		display: block
		position: absolute
		left: 0
		bottom: 0
		width: 100%
		border-top: 1px solid $color
		content: ' '

border-none()
	&:after
		display: none

bg-image($url)
	background-image: url(../images/$url+".png")
